@model RubricaWeb.ViewModels.VM_Docente





@{
    ViewBag.Title = "PanelDocente";
    List<RubricaWeb.ViewModels.VM_Materia> itemsMaterias = (List<RubricaWeb.ViewModels.VM_Materia>)ViewBag.listaMaterias;
    List<SelectListItem> items = (List<SelectListItem>)ViewBag.itemsTemas;
    Layout = "~/Views/Shared/_Layout_Docente.cshtml";

}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


@using (Html.BeginForm())
{
    @Html.HiddenFor(Model => Model.IdDocente)

    <div class="container  ">


        <div class="container-fluid py-5 text-white align-items-center d-flex flex-column">
            <div class="row">
                <h1 class="h1 " style="font-size:50px">Hola @Model.NombreDocente</h1>
            </div>
            <div class="row">
                <p class="" style="font-size:25px">
                    <b> DNI: </b> @Model.DniDocente <br />
                    <b>Dirección: </b> @Model.Direccion <br />
                    <b>Telefono: </b> @Model.Telefono <br />
                    <b>E-mail: </b> @Model.Email <br />
                    <b>Rol Principal: </b> @Model.Rol <br />
                </p>

                <div class="col-12 text-center">
                    <a class=" text-center text-light lead" href="@Url.Action("Logout", "Home")"><i class="fas fa-sign-out-alt fa-2x text-white mb-2"></i> <br />Salir</a>
                </div>

            </div>

        </div>

    </div>


    <div class="container">
        <div class="container-fluid">
            <div class="row">
                <div class="col-10 offset-1">

                    <table class="table border-1 font-weight-bolder text-white" style="">

                        <thead class="h3 table-bordered thead-dark ">
                            <tr class="align-middle">
                                <th class="text-center">
                                    MATERIA
                                </th>
                                <th class="text-center">
                                    CURSO
                                </th>
                                <th class="text-center">
                                    ACCIONES
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in itemsMaterias)
                                {
                                    <tr class="text-center h4 align-middle" style=" background-color: (255, 255, 255, 0.25)">
                                        <td class="align-middle">
                                            @Html.Label(item.materia)
                                        </td>
                                        <td class="align-middle">
                                            @Html.Label(item.curso)
                                        </td>

                                        <td class="align-middle">
                                            @Html.HiddenFor(IdMateria => item.idMateria, new { @Name = item.idMateria })
                                            @Html.HiddenFor(idCurso => item.idCurso)


                                            <div class="row justify-content-center">
                                                <div class="col-12 justify-content-center ">
                                                    <div class="row d-flex pb-1 m-0 align-items-center">
                                                        <div class="col-4  m-0 ">
                                                            <a class="text-light small" href="@Url.Action("CargaTemas", "Rubrica", new {  @idDocente = Model.IdDocente,@idMateria = item.idMateria, @idCurso = item.idCurso})"><i class="fas fa-plus-circle fa-lg m-0 p-0"></i> <br />Nuevo Tema</a>
                                                        </div>
                                                        <div class="col-4 p-0 m-0   ">
                                                            <a class="text-light small" href="@Url.Action("ListadoTemasCargados", "Rubrica", new {  @idMateria = item.idMateria, @idCurso = item.idCurso})"><i class="fas fa-clipboard-list fa-lg m-0 p-0"></i>  <br />Temas Cargados</a>
                                                        </div>
                                                        <div class="col-4 m-0">
                                                            <a class="text-light small" href="@Url.Action("LibretaMateria", "Rubrica", new {  @idMateria = item.idMateria, @pagina=1})"><i class="fas fa-sort-numeric-up fa-lg"></i>  <br />Calificaciones</a>
                                                        </div>
                                                    </div>
                                                    
                                                </div>
                                            </div>


                                            @*<div class="dropdown">
                                                    <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                                                        Ver Mas...
                                                    </button>
                                                    <div class="dropdown-menu  bg-light h6">
                                                        <a class="dropdown-item font-weight-bold" href="@Url.Action("CargaTemas", "Rubrica", new {  @idDocente = Model.IdDocente,@idMateria = item.idMateria, @idCurso = item.idCurso})">Crear Tema</a>
                                                        <a class="dropdown-item font-weight-bold" href="@Url.Action("ListadoTemasCargados", "Rubrica", new {  @idMateria = item.idMateria, @idCurso = item.idCurso})">Lista</a>
                                                        <a class="dropdown-item font-weight-bold" href="@Url.Action("LibretaMateria", "Rubrica", new {  @idMateria = item.idMateria, @pagina=1})">Calificaciones</a>
                                                        <a class="dropdown-item font-weight-bold" href="@Url.Action("LibretaCualificaciones", "Rubrica", new {  @idMateria = item.idMateria,@pagina=1})">Cualificaciones</a>

                                                    </div>
                                                </div>*@
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>




}



