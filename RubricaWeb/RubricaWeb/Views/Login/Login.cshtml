@model RubricaWeb.Models.Login


@{
    Layout = null;
    string error = ViewBag.error;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Rubrica Web</title>
    <link href="~/Content/login.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>



    <!------ Include the above in your HEAD tag ---------->


    <div id="login">
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="" method="post">
                            <h3 class="text-center text-info">Login</h3>
                            @Html.Label(error, htmlAttributes: new {@class= "h2 badge badge-info" })
                            <div class="form-group">
                                <label for="username" class="text-info">Usuario:</label><br>
                                @*<input type="text" name="username" id="username" class="form-control">*@
                                @Html.TextBoxFor(model => model.Usuario, htmlAttributes: new { @class = "form-control", @id = "username", required = "required", @placeholder = "ingrese su DNI" })

                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Contraseña:</label><br>                               
                                @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "form-control inputPass", @id = "password1", required = "required", @name = "clave1" })
                            </div>
                            <div class="form-group">

                                <input type="submit" name="submit" class="btn btn-info btn-md" value="INGRESAR">

                                <div id="register-link" class="text-right">
                                    <a href="@Url.Action("Registrar", "Login", new {})" class="text-info">No tiene una Contraseña?</a>
                                </div>
                            </div>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>