@model RubricaWeb.Models.Login


@{
    Layout = null;
    string error = ViewBag.error;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Rubrica Web</title>
    @*<link href="~/Content/login.css" rel="stylesheet" id="bootstrap-css">*@
    <link href="~/Content/login2.css" rel="stylesheet" id="css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <link href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" />"
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-md-6 ">
                <div class="card rounded" style="background-color:none;">
                    <form class="box " method="post">
                        <h1>Bienvenido a RubricaWeb</h1>

                        <p class="text-muted"> @ViewBag.Mensaje </p>

                        @Html.TextBoxFor(model => model.Usuario, htmlAttributes: new { @class = "form-control", @id = "username", required = "required", @placeholder = "ingrese su DNI", @type = "text" })

                        @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "form-control inputPass", @id = "password1", required = "required", @name = "clave1", @type = "password", @placeholder = "Contraseña" })

                        <a class="forgot text-muted" href="@Url.Action("Registrar", "Login", new { })">Olvido su contraseña? <br /> Crear Contraseña</a>
                        <input type="submit" name="submit" class="btn btn-info btn-md" value="INGRESAR">
                    </form>
                </div>
            </div>
        </div>
    </div>


</body>
</html>




